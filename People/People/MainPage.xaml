<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:People.ViewModels"
             x:Class="People.MainPage"
             Title="Soledad Cabrera">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <!-- Tarjeta con tu información -->
        <Frame Padding="20" CornerRadius="10" BackgroundColor="LightGray" Margin="10">
            <VerticalStackLayout>
                <Label Text="Soledad Cabrera" FontSize="20" HorizontalOptions="Center" />
                <Label Text="Edad: 20" HorizontalOptions="Center" />
                <Image Source="soledad.jpg" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Frame>

        <!-- Campo de texto y botón para agregar personas -->
        <HorizontalStackLayout Margin="10">
            <Entry Placeholder="Nombre" Text="{Binding NewName}" x:Name="scabrera_entry" />
            <Button Text="Agregar" Command="{Binding AddPersonCommand}" x:Name="scabrera_button_add" />
        </HorizontalStackLayout>

        <!-- ListView para mostrar personas -->
        <ListView ItemsSource="{Binding People}" x:Name="scabrera_listview">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding Name}" VerticalOptions="Center" />
                            <Button Text="Eliminar" Command="{Binding BindingContext.DeletePersonCommand, Source={x:Reference scabrera_listview}}" CommandParameter="{Binding}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>

